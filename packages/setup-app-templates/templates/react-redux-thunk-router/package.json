{
  "private": true,
  "scripts": {
    "start": "fullstack-scripts start",
    "build": "fullstack-scripts build",
    "test": "fullstack-scripts test --env=jsdom"
  },
  "devDependencies": {
    "connected-react-router": "^6.5.2",
    "fullstack-scripts": "^2.0.0-alpha.8",
    "history": "^4.9.0",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "node-sass": "^4.12.0",
    "postcss-preset-env": "^6.7.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "sass-loader": "^7.1.0"
  },
  "dependencies": {
    "koa": "^2.7.0",
    "koa-compress": "^3.0.0",
    "koa-morgan": "^1.0.1",
    "koa-range": "^0.3.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "setup-app-ssr": "^2.0.0-alpha.8"
  },
  "eslintConfig": {
    "extends": "setup-app"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 9"
    ]
  },
  "serviceWorkerPreCache": {
    "navigateFallback": "/index.html",
    "navigateFallbackWhitelist": [
      {
        "regexp": "^(?!\\/__).*"
      }
    ],
    "staticFileGlobsIgnorePatterns": [
      {
        "regexp": "\\.map$"
      },
      {
        "regexp": "manifest\\.json$"
      },
      {
        "regexp": "asset-manifest\\.json$"
      }
    ]
  },
  "setupApp": {
    "defaultIndex": "index.html",
    "csr": {
      "buildPath": "build/client"
    },
    "ssr": {
      "methods": {
        "main": "src/server.side.renderer.js",
        "initStore": "src/Store/initStore.js",
        "configureStore": "src/Store/ConfigureStore.js"
      },
      "ssrMiddleware": "server/ssrMiddleware.js",
      "buildPath": "build/server"
    },
    "backendAfter": "server/routes.js",
    "watchBackendFiles": "src/**/*.backend.js"
  }
}
